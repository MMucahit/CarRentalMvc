@model Brand

<form asp-action="Update" asp-controller="Brand" method="post">
    <div class="mb-3">
        <label class="form-label">Brand Id</label>
        <input type="text" class="form-control" id="InputBrandId" asp-for="Id">
    </div>
    <div class="mb-3">
        <label class="form-label">Brand Name</label>
        <input type="text" class="form-control" id="InputBrandId" asp-for="Name">
    </div>

    <button class="btn btn-primary" type="submit">
        Update Brand
    </button>
</form>

